<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Comment</key>
	<string>Created with Recipe Robot v0.0.4 (https://github.com/homebysix/recipe-robot)</string>
	<key>Description</key>
	<string>Downloads the latest version of Tunnelblick and imports it into Munki.</string>
	<key>Identifier</key>
	<string>com.github.homebysix.munki.Tunnelblick</string>
	<key>Input</key>
	<dict>
		<key>MUNKI_REPO_SUBDIR</key>
		<string>apps/%NAME%</string>
		<key>NAME</key>
		<string>Tunnelblick</string>
		<key>pkginfo</key>
		<dict>
			<key>catalogs</key>
			<array>
				<string>testing</string>
			</array>
			<key>description</key>
			<string>Tunnelblick is a Mac app that lets you easily connect to OpenVPN.</string>
			<key>developer</key>
			<string>The Tunnelblick Project</string>
			<key>display_name</key>
			<string>Tunnelblick</string>
			<key>name</key>
			<string>%NAME%</string>
			<key>postinstall_script</key>
			<string>#!/bin/sh
# information on this post-install script here: https://groups.google.com/g/tunnelblick-discuss/c/UYeR7vv_rXM/m/mnat3B0_AgAJ

# get currently logged in user
username=$(/usr/bin/stat -f "%Su" /dev/console)
echo "Current user: $username"

# setup folders and secure Tunnelblick app
/Applications/Tunnelblick.app/Contents/Resources/installer 5

# secure configurations
pushd /Users/$username
/Applications/Tunnelblick.app/Contents/Resources/installer 16
popd
			</string>
			<key>unattended_install</key>
			<true/>
		</dict>
	</dict>
	<key>MinimumVersion</key>
	<string>0.5.0</string>
	<key>ParentRecipe</key>
	<string>com.github.homebysix.download.Tunnelblick</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>additional_pkginfo</key>
				<dict>
					<key>version</key>
					<string>%version%</string>
				</dict>
			</dict>
			<key>Processor</key>
			<string>MunkiPkginfoMerger</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pkg_path</key>
				<string>%pathname%</string>
				<key>repo_subdirectory</key>
				<string>%MUNKI_REPO_SUBDIR%</string>
				<key>version_comparison_key</key>
				<string>CFBundleVersion</string>
			</dict>
			<key>Processor</key>
			<string>MunkiImporter</string>
		</dict>
	</array>
</dict>
</plist>
